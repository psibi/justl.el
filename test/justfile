test-variable := "0.2.7"

# List all recipes
default:
    just --list --color never

# Build command
build-cmd version='0.4':
    echo {{version}}

# Terraform plan
plan:
    echo "planner"

@push version: (build-cmd version)
    echo {{version}}

push2 version1 version2:
    echo {{version1}} {{version2}}

[private]
private_command:
    echo "private command"

# A target that will fail
fail:
    exit 1

# A target that will print strings with carriage return
carriage-return:
    #!/usr/bin/env bash
    printf "1/3\r"
    printf "2/3\r"
    printf "3/3\r"
    printf "DONE\n"

# A target that will print colors
color:
    #!/usr/bin/env bash
    printf "\x1B[31mThis is red text\n"
